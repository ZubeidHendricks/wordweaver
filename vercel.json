{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/auth/register",
      "dest": "/api/auth/register.js"
    },
    {
      "src": "/auth/login",
      "dest": "/api/auth/login.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ]
}