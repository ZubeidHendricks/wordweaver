{
  "version": 2,
  "builds": [{
    "src": "client/package.json",
    "use": "@vercel/static-build",
    "config": {
      "distDir": "build",
      "buildCommand": "cd client && NODE_OPTIONS='--openssl-legacy-provider' npm install && npm run build"
    }
  }],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/[^.]+", "dest": "client/build/index.html" }
  ]
}
